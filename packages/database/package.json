{
  "name": "@solufacil/database",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "postinstall": "test -n \"$DATABASE_URL\" && prisma generate || echo 'Skipped prisma generate (no DATABASE_URL)'",
    "build": "prisma generate && tsc",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate-data": "tsx scripts/migrate-data.ts",
    "db:migrate-local": "SOURCE_DATABASE_URL=\"postgresql://postgres:test1234@localhost:5432/solufacil-api\" TARGET_DATABASE_URL=\"postgresql://postgres:test1234@localhost:5432/solufacil-api\" SOURCE_SCHEMA=neon_import TARGET_SCHEMA=public tsx scripts/migrate-data.ts",
    "db:sync-from-prod": "TARGET_DATABASE_URL=\"postgresql://postgres:test1234@localhost:5432/solufacil-api\" tsx scripts/migrate-data.ts --upload",
    "db:sync-local-only": "TARGET_DATABASE_URL=\"postgresql://postgres:test1234@localhost:5432/solufacil-api\" tsx scripts/migrate-data.ts --export",
    "db:export-only": "TARGET_DATABASE_URL=\"postgresql://postgres:test1234@localhost:5432/solufacil-api\" tsx scripts/migrate-data.ts --export-only",
    "db:dump-to-remote": "tsx scripts/dump-to-remote.ts",
    "db:sync-entries": "tsx scripts/sync-account-entries.ts",
    "db:fix-lead-ids": "tsx scripts/fix-snapshot-lead-id.ts",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.1",
    "pg": "^8.13.0",
    "pg-copy-streams": "^7.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0",
    "@types/pg-copy-streams": "^1.2.5",
    "prisma": "^7.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
